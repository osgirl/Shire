<div class="welcome">
  <p>Events</p>
</div>
<% for (i in events){%>
<div class="event-outer">
  <h2 class="event-title"><%=events[i].title%></h2>
  <h4 class="event-description"><%=events[i].description%></h4>
  <form class="delete-event-form" action="events/deleteEvent" method="post">
  <input type="hidden" name="title" value="<%=events[i].title%>">
  <button id="event-delete" type="submit"><img src="./images/close.png" /></button> 
  </form>
  <div class="event-table-outer">
    <div class="event-info">
      <p class="eventWhere">Location: <%=events[i].eventWhere%></p>
      <p class="event-when">Time: <%=events[i].eventWhen%></p>
    </div>
    <div class="meet-info">
      <p class="meet-where">Meeting Place: <%=events[i].meetWhere%></p>
      <p class="meet-when">Meeting Time: <%=events[i].meetWhen%></p>
    </div>
  </div>
</div>
<%}%>


<div id="event-all">
</div>

<div class="add-event">
  <form class="form-group" id="add-event-form" action="events/add_event" method="post"> 
    <label id="labes">Title</label>
    <input class="form-control" type="text" name="title" /> 
    <label id="labes">Description</label>
    <input class="userInput form-control" type="text" name="description"/> 
    <label id="labes">Location</label>
    <input class="userInput form-control" type="text" name="eventWhere"/>
    <label id="labes">Time</label>
    <input class="userInput form-control" type="text" name="eventWhen"/> 
    <label id="labes">Meeting Place</label>
    <input class="userInput form-control" type="text" name="meetWhere"/> 
    <label id="labes">Meeting Time</label>
    <input class="userInput form-control" type="text" name="meetWhen"/> 
    <button class="btn btn-success" type="submit">Add Event</button>
  </form>
</div>

