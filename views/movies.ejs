          <li><a href="/login">LOGIN</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="welcome">
    <p>Movies</p>
  </div>

  <%for (var movieIndex=0;movieIndex<allMovies.length;movieIndex++){%>
    <div class="movies-container">
      <div class="movies-row">
        <div class="movie-name">
          <p><%=allMovies[movieIndex].title%></p>
        </div>
        <div class="movie-votes">
          <p><%=allMovies[movieIndex].voters.length%></p>
        </div>
        <div class="vote-movie-container">
          <form class="vote-movie-form" action="movies/voteMovie" method="post">
            <input type="hidden" name="movieTitle" value="<%=allMovies[movieIndex].title%>">
            <input class="mySubmit" type="submit" value="Vote">
          </form>
        </div>
        <div class="delete-movie-container">
          <form class="delete-movie-form" action="movies/deleteMovie" method="post">
            <input type="hidden" name="movieTitle" value="<%=allMovies[movieIndex].title%>">
            <input class="mySubmit" type="submit" value="Delete">
          </form>
        </div>
      </div>
    </div>
  <%}%>
  
  <div id="add-movies-container">
    <form id="add-movies-form" action="movies/addMovie" method="post">
      <input type="text" name="movieTitle">
      <input class="mySubmit" type="submit" value="Add Movie">
    </form>
  </div>

</body>
</html>